<Window x:Class="DeckEdu.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeckEdu"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid Background="#AAA">

        <Border Margin="40" Background="#ffe08d" CornerRadius="32">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="0" Opacity="1.5" RenderingBias="Quality" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.5*"/>
                </Grid.ColumnDefinitions>

                <Border Margin="15 15 10 15" Background="#000"/>
                <Border Grid.Column="1" Margin="5 15 10 15" Background="#CCC"/>

                <StackPanel Grid.Column="0"  Margin="15 15 10 15">
                    <Button Content="Alunos"/>
                </StackPanel>
                
            </Grid>
        </Border>





    </Grid>
</Window>
